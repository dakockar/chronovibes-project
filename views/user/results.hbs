{{> navbarPartial this}}


<div class="entry-page">

  {{#if results}}

  <h2>results for "{{queryStr}}"</h2>

  {{#each results}}

  <div class="entrybox">

    <h1><a href="/entries/{{this._id}}">{{this.title}}</a></h1>
    <div class="entry-date">{{dateFormat this.time "MMMM Do YYYY"}} by <a
        href="/author/search/{{this.authorId.username}}"><span
          class="entry-author">{{this.authorId.username}}</span></a></div>

    <div class="entry-body">
      {{splitBefore this.entryBody ../queryStr}}<span class="highlighted">{{../queryStr}}</span>{{splitAfter
      this.entryBody ../queryStr}}
    </div>



    {{#if this.tags}}
    <ul>
      {{#each tags}}
      <li><a href="/entries/search/{{this}}">#{{this}}</a></li>
      {{/each}}
    </ul>
    {{/if}}


    <span class="isPublic">
      {{#if this.isPublic}}
      <span>public</span>
      {{else}}
      <span>private</span>
      {{/if}}
    </span>

  </div>

  {{/each}}


  {{else}}

  <div>
    {{#if msg}}
    <p class="error">{{msg}}</p>

    {{else}}
    <h2>No results for "{{queryStr}}"</h2>

    {{/if}}

  </div>

  {{/if}}

</div>