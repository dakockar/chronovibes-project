{{> navbarPartial this}}

<span id="greeting" class="greet"> </span><span class="greet">{{user.username}}</span>

<div id="quote" class="disappear"></div>


<div class="mood-wrapper">

  <div class="chosen-mood mood-bg disappear">
    <p>mood:</p>
    <img src="images/{{user.mood}}.png" alt="" height="40">
  </div>


  <div class="playlist disappear">
    <p>maybe you wanna try one of these playlists:</p>
    <ul>
      {{#each playlists}}
      <a target="_blank" href="{{this.external_urls.spotify}}">
        <li>
          <p>
            {{this.name}}
          </p>
          <p>
            <img class="playlist" src="{{this.images.0.url}}" alt="">
          </p>
        </li>
      </a>
      {{/each}}
    </ul>
  </div>
</div>





<script src="../js/home.js"></script>

<script>

  document.onload =
    setTimeout(() => {
      document.querySelector('#quote').classList.remove('disappear');
      document.querySelector('.chosen-mood').classList.remove('disappear');
      document.querySelector('.playlist').classList.remove('disappear');
    }, 400);
</script>