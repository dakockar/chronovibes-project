
{{> navbarPartial this}}
<div class="entries-page">

  <div class="entrywrapper">

    {{#if entries}}
    {{#each entries}}
    <div class="entrybox">

      <h1><a href="/entries/{{this._id}}">{{this.title}}</a></h1>
      <div class="entry-date">{{dateFormat this.time "MMMM Do YYYY"}}</div>
      <div class="entry-body">{{this.entryBody}}</div>

{{#if this.tags}}
  <ul>
    {{#each tags}}
    <li><a href="/entries/search/{{this}}">#{{this}}</a></li>
    {{/each}}
  </ul>
{{/if}}

    </div>

    {{/each}}
    {{else}}
    <div id="empty">No entries</div>
    {{/if}}

  </div>
</div>