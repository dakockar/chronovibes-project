
{{> navbarPartial this}}
<div class="write-form">
 
<div class="wrapper">
  <h2>Write entry</h2> 
  <div class="entrybox">
    <form action="/create" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
    <div class="mb-3">
        <label for="entry-body" class="form-label">Write something</label>
        <textarea class="form-control" id="entry-body" name="entryBody" rows="4" required></textarea>
    </div>
    <div class="mb-3">
        <label for="tags" class="form-label">Tags</label>
        <input type="text" class="form-control" id="tags" name="tags">
      </div>
      <button type="submit" class="write-btn">Submit</button>
    </form>

  </div>
</div>
</div>