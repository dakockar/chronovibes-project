
{{> navbarPartial this}}
<div class="entries-page">

  <div class="entrywrapper">
    <h2>Entries from {{query}}</h2>
    {{#if results}}
    {{#each results}}
    <div class="entrybox">

      <h1><a href="/entries/{{this._id}}">{{this.title}}</a></h1>
      <div class="entry-date">{{dateFormat this.time "MMMM Do YYYY"}}</div>
      <div class="entry-body">{{this.entryBody}}</div>

      {{#if this.tags}}
      <div class="tags">{{this.tags}}</div>
      {{/if}}


    </div>
    {{/each}}
    {{else}}
    <div id="empty">No entries were made on this day. Kitten here though
    </div>
    <div class="placeholder"> <img src="https://placekitten.com/300/300"></div>
    {{/if}}

  </div>
</div>