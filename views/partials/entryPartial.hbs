<div class="entrybox">
  <h1><a href="/entries/{{this._id}}">{{this.title}}</a></h1>

  <div class="entry-date">{{dateFormat this.time "MMMM Do YYYY"}} by <a
      href="/author/search/{{this.authorId.username}}"><span class="entry-author">{{this.authorId.username}}</span></a>
  </div>
  <div class="entry-body">{{this.entryBody}}</div>

  {{#if this.tags}}
  <ul>
    {{#each tags}}
    <li><a href="/entries/search/{{this}}">#{{this}}</a></li>
    {{/each}}
  </ul>
  {{/if}}

  <span class="isPublic">
    {{#if this.isPublic}}
    <span>public</span>
    {{else}}
    <span>private</span>
    {{/if}}
  </span>

</div>